{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Aeria",
  "scopeName": "source.aeria",
  "fileTypes": [
    "aeria"
  ],
  "patterns": [
    { "include": "#comment" },
    { "include": "#collection_definition" },
    { "include": "#property_column" },
    { "include": "#property_object_column" }
  ],
  "repository": {
    "comment": {
      "begin": "(\\/\\/)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.comment.aeria" }
      },
      "end": "(?:\\n|$)",
      "name": "comment.line.double-slash.aeria"
    },
    "number": {
      "name": "constant.numeric.aeria",
      "match": "([0-9]+)(\\.[0-9]+)?"
    },
    "boolean": {
      "name": "constant.language.aeria",
      "match": "(true|false)"
    },
    "double_quoted_string": {
      "name": "string.quoted.double.aeria",
      "begin": "\"",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin.aeria" }
      },
      "end": "\"",
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end.aeria" }
      },
      "patterns": [
        {
          "name": "constant.character.escape.aeria",
          "match": "\\\\."
        }
      ]
    },
    "single_quoted_string": {
      "name": "string.quoted.single.aeria",
      "begin": "'",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin.aeria" }
      },
      "end": "'",
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end.aeria" }
      },
      "patterns": [
        {
          "name": "constant.character.escape.aeria",
          "match": "\\\\."
        }
      ]
    },
    "quoted_string": {
      "patterns": [
        { "include": "#single_quoted_string" },
        { "include": "#double_quoted_string" }
      ]
    },
    "double_quoted_string": {
      "name": "string.quoted.double.aeria",
      "begin": "\"",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin.aeria" }
      },
      "end": "\"",
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end.aeria" }
      },
      "patterns": [
        {
          "name": "constant.character.escape.aeria",
          "match": "\\\\."
        }
      ]
    },
    "attribute": {
      "begin": "(@(\\w+))(\\()",
      "beginCaptures": {
        "1": { "name": "entity.name.function.aeria" },
        "2": { "name": "punctuation.section.parens.begin.aeria" }
      },
      "end": "\\)",
      "endCaptures": {
        "0": { "name": "punctuation.section.parens.end.aeria" }
      },
      "patterns": [
        { "include": "#number" },
        { "include": "#boolean" },
        { "include": "#quoted_string" }
      ]
    },
    "property_column": {
      "begin": "^\\s*(\\w+)\\s+(\\[\\])?((str|num|int|float|bool|enum)|(\\w+))",
      "beginCaptures": {
        "1": { "name": "variable.other.assignment.aeria" },
        "2": { "name": "keyword.operator.list_type.aeria" },
        "3": { "name": "support.type.primitive.aeria" },
        "4": { "name": "variable.language.relations.aeria" }
      },
      "end": "\\n?$",
      "patterns": [
        { "include": "#attribute" }
      ]
    },
    "property_object_column": {
      "begin": "^\\s*(\\w+)\\s+(\\[\\])?({)",
      "beginCaptures": {
        "1": { "name": "variable.other.assignment.aeria" },
        "2": { "name": "keyword.operator.list_type.aeria" },
        "3": { "name": "punctuation.definition.bracket.curly.begin.aeria" }
      },
      "end": "\\s*\\}",
      "endCaptures": {
        "0": { "name": "punctuation.definition.bracket.curly.end.aeria" }
      },
      "patterns": [
        { "include": "#required" },
        { "include": "#properties" }
      ]
    },
    "condition": {
      "begin": "(@cond)(\\()",
      "beginCaptures": {
        "1": { "name": "entity.name.function.aeria" },
        "2": { "name": "punctuation.section.parens.begin.aeria" }
      },
      "end": "\\)",
      "endCaptures": {
        "0": { "name": "punctuation.section.parens.end.aeria" }
      }
    },
    "conditional_property_column": {
      "begin": "^\\s*(\\w+)",
      "beginCaptures": {
        "1": { "name": "variable.other.aeria" }
      },
      "end": "\\n?$",
      "patterns": [
        { "include": "#condition" }
      ]
    },
    "required": {
      "begin": "^\\s*(required)\\s*({)",
      "beginCaptures": {
        "1": { "name": "keyword.other.aeria" },
        "2": { "name": "punctuation.definition.brackets.curly.begin.aeria" }
      },
      "end": "\\s*\\}",
      "endCaptures": {
        "0": { "name": "punctuation.definition.bracket.curly.end.aeria" }
      },
      "patterns": [
        { "include": "#conditional_property_column" }
      ]
    },
    "properties": {
      "begin": "^\\s*(properties)\\s*({)",
      "beginCaptures": {
        "1": { "name": "keyword.other.aeria" },
        "2": { "name": "punctuation.definition.brackets.curly.begin.aeria" }
      },
      "end": "\\s*\\}",
      "endCaptures": {
        "0": { "name": "punctuation.definition.bracket.curly.end.aeria" }
      },
      "patterns": [
        { "include": "#comment" },
        { "include": "#property_column" },
        { "include": "#property_object_column" }
      ]
    },
    "function_attribute": {
      "begin": "(@expose)(\\()",
      "beginCaptures": {
        "1": { "name": "entity.name.function.aeria" },
        "2": { "name": "punctuation.section.parens.begin.aeria" }
      },
      "end": "\\)",
      "endCaptures": {
        "0": { "name": "punctuation.section.parens.end.aeria" }
      },
      "patterns": [
        { "include": "#boolean" },
        { "include": "#quoted_string" }
      ]
    },
    "function_column": {
      "begin": "^\\s*((count|getAll|get|insert|removeAll|removeFile|remove|upload)|([a-zA-Z]([a-zA-Z0-9]|_)+))(\\??)",
      "beginCaptures": {
        "2": { "name": "variable.other.constant.aeria" },
        "3": { "name": "variable.other.assignment.aeria" },
        "5": { "name": "keyword.operator.optional.aeria" }
      },
      "end": "\\n?$",
      "patterns": [
        { "include": "#function_attribute" }
      ]
    },
    "functions": {
      "begin": "^\\s*(functions)\\s*({)",
      "beginCaptures": {
        "1": { "name": "keyword.other.aeria" },
        "2": { "name": "punctuation.definition.brackets.curly.begin.aeria" }
      },
      "end": "\\s*\\}",
      "endCaptures": {
        "0": { "name": "punctuation.definition.bracket.curly.end.aeria" }
      },
      "patterns": [
        { "include": "#comment" },
        { "include": "#function_column" }
      ]
    },
    "collection_definition": {
      "begin": "^\\s*(collection)\\s+([A-Z]\\w*)\\s*({)",
      "name": "source.aeria.embedded.source",
      "beginCaptures": {
        "1": { "name": "storage.type.struct.aeria" },
        "2": { "name": "entity.name.type.model.aeria" },
        "3": { "name": "punctuation.definition.bracket.curly.begin.aeria" }
      },
      "patterns": [
        { "include": "#comment" },
        { "include": "#required" },
        { "include": "#properties" },
        { "include": "#functions" },
        { "include": "#exposed_functions" }
      ],
      "end": "\\s*\\}",
      "endCaptures": {
        "0": { "name": "punctuation.definition.bracket.curly.end.aeria" }
      }
    }
  }
}
